extends ./includes/layout
include ./mixins/newsletterForm

block content

  .container_middle
    .animated.fadeInUp
      include ./includes/breadcrumb.pug

  .container_middle

    .contact.animated.fadeInUp
      .contact_form_wrapper.box_with_shadow
        .contact_form_container

          if content.config.claim
            h2.contact_form_title Join my newsletter and keep up to date! Get exclusive content, early access to tutorials, updates and projects.

          +newsletterForm({
            namePlaceholder: content && content.form && content.form.name ? content.form.name : null,
            emailPlaceholder: content && content.form && content.form.email ? content.form.email : null,
            successMessage: 'You\'re now subscribed to the community!',
            submitButtonText: 'Join Community!'
          })
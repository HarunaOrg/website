extends ./includes/layout

block content

  .container_middle
    .animated.fadeInUp
      include ./includes/breadcrumb.pug

  .container_middle

    .contact.animated.fadeInUp
      .contact_form_wrapper.box_with_shadow
        .contact_form_container

          if content.config.claim
            h2.contact_form_title Join my newsletter and keep up to date! Get exclusive content, pre-access to tutorials, updates and projects.

          .contact_form_result.contact_form_success
            h2 Thank you!
            p You're now subscribed to the community!<br />

          center
            img#contactLoader.loaderIcon(src="/images/loading.gif", width="30px", style="display: none;")

          form.contact_form(action="/newsletter/send", method="post", autocomplete="off")#contactform
            input(value="/api/v1/newsletter", type="hidden", id="contactFormEndpoint")

            fieldset.contact_form_fieldset
              p.wrong#wrongName
                span.icon.ion-alert-circled
                | Error: Your name can not be blank
              input.input_not_blank(type="name", id="the_name", name="__name", placeholder= content.form.name || 'What is your name?').contact_form_input

            fieldset.contact_form_fieldset
              p.wrong#wrongEmail
                span.icon.ion-alert-circled
                | Error: The email you introduced is not valid. Try again.
              input.input_email(type="name", id="email", name="__email", placeholder= content.form.email || 'And your email?').contact_form_input

            fieldset.contact_form_fieldset(style="display: none; margin-bottom: 0;")
              .contact_form_newsletter
                span.contact_form_newsletter_check
                  .mk-trc(data-style="check")
                    input(id="checkbox1.1", class="newsletter", type="checkbox", name="__subscribed", value="Subscribed", checked)
                    label(for="checkbox1.1")
                      i
                span.contact_form_newsletter_text #{content.form.newsletter || 'I want to receive projects and updates from Jorge'}

            .contact_form_result.contact_form_failure
              p Sorry. I can't add you to the list.<br /> Try again or <u><a class='openModalBox'>contact me directly</a></u>

            fieldset.contact_form_fieldset.contact_fieldset_nomargin
              input(type="submit", value='Join community!').button.send.send_margin.contact_form_submit#formSendButton
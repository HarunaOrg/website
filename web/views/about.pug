extends ./includes/layout
include ./mixins/resumeEntry
include ./mixins/timelineEntry
include ./mixins/subscriptionBoxLarge

block content_full
  //.profileCard
    .profileCard_bg
      // SEO
      img
    .profileCard_avatar
      img(src="/images/jorge_ferreiro_software_engineer_developer_entrepreneur.jpg")
    .profileCard_userFields
      h1.profileCard_name Jorge Ferreiro
      h2.profileCard_job <strong>Software Engineer / Entrepreneur</strong>

      .about_resume
        a(href="/resume/jorge_ferreiro_resume.pdf?download=true", target="_blank").about_resume_button.about_resume_button_download Download my resume
        a(href="/resume/jorge_ferreiro_resume.pdf", target="_blank").about_resume_button.about_resume_button_view View my resume

block content

  // include ./includes/breadcrumb.pug
  .animated.animated.fadeInUp
    center
      h1.about_bio__large__title Jorge Ferreiro
      h2.about_bio__large__subtitle Software Engineer, Product Manager &amp; Entrepreneur

    .about_bio__large
      .about_bio__large__left_v2(style="background-image: url(/images/about/jorge_big_2.png);")
        img(src="/images/about/jorge_big_2.png", width="100%").about_bio__large__pic
      .about_bio__large__right
        .about_bio__large__right__content
          p.about_bio__large__bio Hello! I'm <strong>Jorge Ferreiro</strong>, a 22-yo Software Engineer, Product Manager and Entrepreneur with a passion for design and a desire to create software products that solve real problems and improve people's lives.
          p.about_bio__large__bio I've launched two <a href="/portfolio">projects</a> that I'm really proud of: <strong>Dailyfocus</strong> and <strong>Music4deejays</strong> (a music application that reached 56,000 downloads).
          p.about_bio__large__bio In summer 2017, I was studying at UC Berkeley (CS 61BL and COS). In 2016 I did an internship in China with Huawei and in 2013 I started my bachelor's degree in Computer Science at UCM (expected graduation year 2017/18).
          p.about_bio__large__bio As the creator and main driver of Dailyfocus, I take requirements and define the product roadmap, design the architecture, create prototypes, run user research to validate ideas, and built an MVP in under 5 months. You can <a href="http://test.dailyfocus.io" target="_blank">checkout the application</a>
          p.about_bio__large__bio In my next steps, I'm planning to take Dailyfocus to the next level while looking for opportunities to expand his business knowledge and technical expertise.
          p.about_bio__large__bio (ideas|WIP) next: work on dailyfocus, expandir mi marca personal, compartir mi conocimiento (blog) y dar charlas. I'm always open to challenging job opportunities and projects. <a href="/contact">Contact me</a> if you want to connect and make a proposal.
          .about_bio__large__callToAction
            a(href="/resume/jorge_ferreiro_resume.pdf", target="_blank").about_bio__large__button
              span.icon.ion-document
              | Read Resume
            a(href="/resume/jorge_ferreiro_resume.pdf?download=true", target="_blank").about_bio__large__button
              span.icon.ion-ios-cloud-download-outline
              | Download Resume

  h1.timeline__bigTitle Timeline

  .timeline
    .timeline__wrapper
      .timeline__badge
        span.timeline__badge__title Education
      .timeline__entries
        each item in education || []
          +timelineEntry(item)

  .timeline
    .timeline__wrapper
      .timeline__badge
        span.timeline__badge__title Experience
      .timeline__entries
        each item in work || []
          +timelineEntry(item)


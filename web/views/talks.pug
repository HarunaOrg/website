extends ./includes/layout
include ./mixins/talkCard

block content_full

block content
  //- Container middle
  .container_middle
    .animate
      include ./includes/breadcrumb.pug

  .animate
    .blogHeader.blogHeader__large.talkHeader.lazy
      .blogHeader_bg(style="background-image: url(" + config.wallpaper + ");")
        //-SEO
        img(src= config.wallpaper)
      .blogHeader_userFields(style="max-width: 520px; margin: 0 auto;")
        h2.blogHeader_info !{config.subtitle}

        .about_resume(style="margin-top: 0.5em;")
          a(href="/contact/talk").about_resume_button.about_resume_button_view.blogHeader_button= config.callToAction.button

    .animated.fadeInUp
      h1.titleSeparator Previous Talks and Workshops

      .threeColsGrid
        each talk in pastTalks ||Â []
          if !talk.private
            .threeColsGrid__item.lazy
              .threeColsGrid__item__wrapper
                +talkCard(talk)

        // .separator_no_margin
        .threeColsGrid__item
          .threeColsGrid__item__wrapper
            .talk__ad.shadow__box
              h1.talk__ad__title Are you organizing an event?
              p.talk__ad__subtitle I'm always looking for opportunities to share what I know. If my profile fits your event topics, I'd love to get a chance to be envolved. Just send me an email or use the contact form below. Thank you!
              a(href="/contact/talk").talk__ad__link Bring me to your event
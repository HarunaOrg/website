mixin blogEntry(post)
    - var postUrl = '/blog/' + post.permalink
    .blog__entry.box_with_shadow
      //.blog__link
        a(href= postUrl)
      .blog__post
        .blog__post__left
          .blog__post__pic(style="background-image:url(" + post.pic + ");")
            a(href= postUrl).blog__post__pic__link
        .blog__post__right
          .blog__post__metadata

            if !post.published
              p(style="border: 1px solid #cecece; margin-bottom: 1em; border-radius:3px; padding: 0.2em 0.4em; display: inline-block;") DRAFT

            h1.blog__post__title
              a(href=postUrl).blog__post__title__link= post.title

            .blog__author
              // .blog__author__pic
                img(src= post.author.pic || '')
              .blog__author__content
                h2.blog__author__name= post.author.name || ''
                p.blog__author__date= post.created || ''

            if post.summary
              p.blog__post__intro= post.summary
            a(href= postUrl).blog__post__read Read more

            if admin
              hr
              i= 'postid: ' + post._id + ' | Permalink: ' + post.permalink
              p= 'Views ' + post.views + ' | Likes: ' + post.likes
              style.
                .admin__options li {
                  display: inline-block;
                  margin-top: 1em;
                }
                .admin__options li a {
                  margin-right: 1em;
                  border: 1px solid #cecece;
                  border-radius:3px;
                  padding: 0.6em 0.8em;
                  display: inline-block;
                  text-decoration: none;
                }
                .admin__options li a:hover {
                  background: #f4f4f4;
                }
                .admin__options li a span {
                  margin-right: 10px;
                }

              ul.admin__options
                li
                  a(href= '/blog/' + post.permalink) See post
                li
                  a(href= '/admin/edit/' + post.permalink)
                    span.icon.ion-edit
                    | Edit post
                li
                  a(href= '/admin/delete/' + post.permalink)
                    span.icon.ion-android-delete
                    | Delete post
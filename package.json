{
    "private": true,
    "name": "ferreiro.me",
    "engines": {
        "node": "8.10.0"
    },
    "scripts": {
        "client": "PORT=5000 yarn workspace @ferreiro/client start",
        "server": "yarn workspace @ferreiro/server start",
        "devClient": "PORT=5000 yarn workspace @ferreiro/client dev",
        "devServer": "yarn workspace @ferreiro/server dev",
        "buildAssets": "yarn workspace @ferreiro/server build",
        "dev": "yarn buildAssets && concurrently --kill-others-on-fail \"yarn devServer\" \"yarn devClient\"",
        "start": "yarn install && yarn buildAssets && concurrently --kill-others-on-fail \"yarn server\"  \"yarn client\"",
        "heroku-postbuild": "npm run build && npm run build:bower"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {}
}

{
    "private": true,
    "name": "ferreiro.me",
    "engines": {
        "node": "8.x",
        "yarn": "1.x"
    },
    "scripts": {
        "build": "yarn workspace @ferreiro/server build",
        "check": "npm-check",
        "devServer": "yarn build && yarn workspace @ferreiro/server dev",
        "dev": "yarn install && yarn build && concurrently --kill-others-on-fail \"yarn devServer\"",
        "heroku-postbuild": "yarn build",
        "server": "yarn workspace @ferreiro/server start",
        "start": "yarn server",
        "test": "echo $'[TODO] Implement tests'"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "concurrently": "4.1.0",
        "npm-check": "5.9.0"
    },
    "dependencies": {}
}

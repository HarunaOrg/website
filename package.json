{
    "private": true,
    "name": "ferreiro.me",
    "engines": {
        "node": "8.10.0"
    },
    "scripts": {
        "client": "cd packages/client && PORT=5000 yarn start",
        "server": "cd packages/server && yarn start",
        "devClient": "cd packages/client && PORT=5000 yarn dev",
        "devServer": "cd packages/server && yarn dev ",
        "buildAssets": "cd packages/server && yarn build",
        "dev": "yarn buildAssets && concurrently --kill-others-on-fail \"yarn devServer\" \"yarn devClient\"",
        "start": "yarn install && yarn buildAssets && concurrently --kill-others-on-fail \"yarn server\"  \"yarn client\"",
        "heroku-postbuild": "npm run build && npm run build:bower"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {}
}

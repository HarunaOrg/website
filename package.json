{
    "private": true,
    "name": "ferreiro.me",
    "engines": {
        "node": "8.x",
        "yarn": "1.x"
    },
    "scripts": {
        "check": "npm-check",
        "client": "PORT=5000 yarn workspace @ferreiro/client start",
        "server": "yarn workspace @ferreiro/server start",
        "devClient": "PORT=5000 yarn workspace @ferreiro/client dev",
        "devServer": "yarn buildAssets && yarn workspace @ferreiro/server dev",
        "buildAssets": "yarn workspace @ferreiro/server build-assets",
        "dev": "yarn buildAssets && concurrently --kill-others-on-fail \"yarn devServer\" \"yarn devClient\"",
        "start": "yarn server",
        "heroku-postbuild": "npm run buildAssets"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "concurrent": "0.3.2",
        "npm-check": "5.9.0"
    },
    "dependencies": {}
}

mixin PostCredits({author, publishedDate} = {})
    .postCredits
        p.postCredits__author
            span.postCredits__author-avatar
                a(href="https://www.linkedin.com/in/jgferreiro/", target="_blank")
                    img(src="https://pbs.twimg.com/profile_images/1170099335389995013/0Iadm3ZE_400x400.jpg")
            
            span.postCredits__author-info
                span.postCredits__author-name
                    a(href="https://www.linkedin.com/in/jgferreiro/", style="text-decoration: none;", target="_blank")= author
                    </a> <a href="https://twitter.com/jgFerreiro" target="_blank">(@jgferreiro)</a>
                span.postCredits__author-date Published #{publishedDate.toLocaleDateString("en-US", {})}</span>
        .postCredits__comments
            a(href="#comments", class="open-comments-pannel") Comments
    
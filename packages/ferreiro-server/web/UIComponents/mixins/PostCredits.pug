mixin PostCredits({author, publishedDate} = {})
    .postCredits
        .postCredits__author
            p
                <strong><a href="https://twitter.com/jgFerreiro" target="_blank">#{author}</a></strong> - <span>Published #{publishedDate.toLocaleDateString("en-US", {})}</span>
        .postCredits__comments
            a(href="#comments", class="open-comments-pannel") Comments
    
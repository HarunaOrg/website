doctype html
html
  head
    link(rel='stylesheet', href='/bower_components/Ionicons/css/ionicons.min.css?v=3.6.3', type='text/css')
    <meta charset="UTF-8"><meta http-equiv="Content-Language" content="en-US">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    meta(property="og:type", content="website")
    meta(property="og:title", content= title ? title : defaultTitle)
    meta(property='og:description', content= description ? description : defaultDescription)
    meta(property="og:url", content="http://www.ferreiro.me")
    meta(property="og:site_name", content="Jorge Ferreiro")
    meta(property="og:locale", content="en_US")
    meta(property='og:image', content= defaultImage)
    meta(property='og:image:alt', content= title + ' ' + defaultTitle)

    meta(name="twitter:site", content="@jgferreiro")
    meta(name="twitter:creator", content="@jgferreiro")
    meta(name="twitter:card", content="summary")
    meta(name="twitter:title", content= title ? title : defaultTitle)
    meta(name="twitter:description", content=description ? description : defaultDescription)
    meta(name="twitter:image", content=defaultImage)

    title="Jorge Ferreiro Links"
    meta(name='description', content="Useful links from Jorge Ferreiro")


    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;1,700&display=swap" rel="stylesheet">


  body
    style.
      h1, h2, h3, h4, p {
        margin: 0;
        padding: 0;
      }
      .wrapper {
        margin: 0 auto;
        padding: 1em;
        max-width: 600px;
        font-family: 'Roboto', sans-serif;
      }
      .masthead {
        text-align: center;
        margin-bottom: 3rem;
      }
      .masthead__image {
        width: 100px;
        border-radius: 100%;
      }
      .masthead__title {
        margin: 1rem;
        font-weight: bold;
      }
      .masthead__subtitle {
        margin: 0;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
      }
      .cards {
        list-style: none;
        margin: 0;
        padding: 0;
      }
      .card {
        border-radius: 3px;
        border: 3px solid #d83902;
        margin-bottom: 1.5rem;
      }
      .card__link {
        display: block;
        padding: 1rem 1.5rem;
        text-decoration: none;
      }
      .card__wrapper {
        display: flex;
        align-items: center;
      }
      .card__wrapper img {
        flex: 0 0 auto;
        width: 120px;
        height: 80px;
        object-position: center;
        object-fit: cover;
        border-radius: 4px;
        margin-right: 1.5rem;
      }
      .card__label {
        margin-bottom: 1.2rem;
      }
      .card__title {
        color: #000;
        line-height: 1.8rem;
        font-size: 1.3rem;
      }
      .card__content {
        align-items: center;
      }

      .projects {
        display: grid;
        grid-template-columns: 1fr 1fr;
        column-gap: 2rem;
      }
      .projects__title {
        margin: 3rem;
        margin-bottom: 2rem;
        text-align: center;
      }
      .project {
        
      }
      .project__title {
        color: #000;
        font-size: 1.3rem;
      }
      .project__image {
        width: 100%;
      }

      .social {
        margin-bottom: 3rem;
        display: flex;
        justify-content: center;
      }
      .social img {
        width: 30px;
        margin: 0 .3rem;
        border: 2px solid #cecece;
        border-radius: 10px;
        padding: .4rem;
      }

    .wrapper
      .masthead
        img.masthead__image(src="https://scontent-mad1-1.cdninstagram.com/v/t51.2885-19/s150x150/44545007_194949794748632_2823704911357673472_n.jpg?_nc_ht=scontent-mad1-1.cdninstagram.com&_nc_ohc=atMca9GHGTYAX_epVDa&oh=2bc77848b96e5bc888e666507f2fddf4&oe=5EBBDE07", alt="Jorge Ferreiro, developer, indie maker, entrepreneur")
        h1.masthead__title Jorge Ferreiro
        h2.masthead__subtitle @jgferreiro

      if pinnedLink
        h2.card__label üìå Pinned link
        .card
          a(href=pinnedLink.url).card__link
            .card__wrapper
              .card__content
                h2.card__title=pinnedLink.title

      h2.card__label üìù Last post
      .card
        a(href= '/blog/' + latestPost.permalink).card__link
          .card__wrapper
            .card__image
              img(src= latestPost.pic)
            .card__content
              h2.card__title= latestPost.title

      h2.card__label üìπ Last video
      .card
        a(href='https://www.youtube.com/watch?v=' + latestVideo.id.videoId).card__link
          .card__wrapper
            .card__image
              img(src=latestVideo.snippet.thumbnails.default.url)
            .card__content
              h2.card__title=latestVideo.snippet.title.substr(0, 65)


      h2.projects__title My projects

      .projects
        each project in projects
          .project
            a(href= project.url).project__link
              img(alt=project.title, src= '/images/' + project.image).project__image
              h3.project__title= project.title


      h2.projects__title Social networks

      .social
        a(href="https://www.linkedin.com/in/jgferreiro/?utm_source=links&utm_medium=cta&utm_campaign=links-ferreiro")
          img(src="/images/icons/logo-linkedin.svg")

        a(href="https://www.twitter.com/jgferreiro/?utm_source=links&utm_medium=cta&utm_campaign=links-ferreiro")
          img(src="/images/icons/logo-twitter.svg")

        a(href="https://www.youtube.com/channel/UCA2Z3mQUqOj80M84vRu-3AQ?utm_source=links&utm_medium=cta&utm_campaign=links-ferreiro")
          img(src="/images/icons/logo-youtube.svg")

        a(href="https://www.instagram.com/jgferreiro/?utm_source=links&utm_medium=cta&utm_campaign=links-ferreiro")
          img(src="/images/icons/logo-instagram.svg")
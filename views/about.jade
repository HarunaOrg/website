extends ./includes/layout

block content

  .about#animate_div
    
    .about-images
      .about-images-entry
        img(src="images/tech.jpg", alt="")
      //- .about-images-entry.about-images-photo1
      //-   img(src="images/trip.jpg", alt="")
      //-     
      //- .about-images-entry.about-images-photo2
      //-   img(src="images/tech.jpg", alt="")
      //-     
      //- .about-images-entry.about-images-photo3
      //-   img(src="images/city.jpg", alt="")
      
    .about-bio
      h1.about-bio-title Jorge Ferreiro
      h2.about-bio-subtitle <strong>Software developer</strong> &amp; computer science student
      //<br/><span>&amp; Full stack software developer</span>
      p.about-bio-text Hello! I’m Jorge Ferreiro, 21 yo software developer studying computer science at UCM (Madrid, Spain). I'm currently enrolled in my last year. 
      p.about-bio-text I’m a self-taugh programmer and web develoer since 11 years old. I love learning and pushing up my skills to higher levels. My passion is making software to improve people's life. 
      p.about-bio-text On 2017 I’m finishing my university so I’m currently running my startup as a final project.
      
      h3.about-bio-skills-title Skills and Tools:

      if content.skills
        .tech_skills
          - for skill_type in content.skills
            .tech_skills_box(id="#{skill_type.id}")
              .tech_skills_box_title
                h3 <strong>#{skill_type.title}</strong>
              .tech_skills_box_content
                - for icon in skill_type.list
                  .tech_skills_box_content_entry

                    if icon == "bower"
                      <i class="cbp-ig-icon devicon-bower-line"></i>
                    else if icon == "less"
                      <i class="cbp-ig-icon devicon-less-plain-wordmark"></i>
                    else
                      i.cbp-ig-icon(class="devicon-#{icon}-plain")
                    p #{icon}

    center
      a(href="./projects", class="callToAction").button.button_rounded.margin_top.orange
        span Discover my Work!
        span.icon-arrow-right2

.menu.fixed
  .container

    a.logo(href="/")
        img(src="/images/logo.jpg")

    .left
      a.item(href="/about", class="#{path==='about'?'item-selected':''}")
        p About Jorge Ferreiro

      a.item(href="/projects", class="#{path==='projects'?'item-selected':''}")
        p Projects &amp; Works

      a.item(href="/contact", class="#{path==='contact'?'item-selected':''}")#contact
        p Contact

    .right

      .jfmenu_open_button#dropdown-mobiles
        span.icon-paragraph-justify

      .dropdown
        .item.with-icon
          p
            span.icon-address-book.extra-margin
            span Social Networks
            .dropdown-content#DropdownSocial
              a.dropdown-link(href="https://github.com/ferreiro", target="_blank") Github
              a.dropdown-link(href="https://linkedin.com/in/jgferreiro", target="_blank") Linkedin
              a.dropdown-link(href="https://twitter.com/jgferreiro", target="_blank") Twitter
              a.dropdown-link(href="https://soundcloud.com/jgferreiro", target="_blank") Soundcloud

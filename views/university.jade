extends ./includes/layout

block content

	include ./includes/breadcrumb.jade

	.sectionWrapper#animate_div
		.university

			img.university_wall(src="/images/fdi_ucm.jpg", width="100%")

			if content.text
				for text in content.text
					p.paragraph !{text}

			.language_icon
				span.lang_icon.lang_english
				span.lang_text English course #{englishCourses}/50

			.language_icon
				span.lang_icon.lang_spanish
				span.lang_text Spanish course #{spanishCourses}/50

			if content.courses
				- for course, index in content.courses
					.course

						if course.title
							h2.course_title
								span.course_title_year #{index+1}
								span.course_title_text #{course.title}

						if course.subjects
							.course_subjects
								- for subject in course.subjects
									.course_subjects_entry
										- lang = subject.lang
										if lang
											if lang == "es"
												span.flags
													span.lang_icon.lang_spanish
											else if lang == "en"
												span.flags
													span.lang_icon.lang_english
										if subject.title
											p #{subject.title}
						else
							p Subjects for next year not decided yet.

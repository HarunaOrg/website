extends ./includes/layout

block content
  
  .error
    style.
      h1 {
        margin-bottom: 0.4em;
      }
    if title
      h1 #{title}
      h2= error.status
    else
      h1 Page not found
    
    if specialMessage
      p.error_text !{specialMessage}
    else
      p.error_text Hi! I coud not find the page you are looking for... Could you please check if the URL is correct?<br />

      p.error_text If you think this page must work. Please, report the problem to &rarr; <a class="mailLink"><span class='email'>jorge AT ferreiro DOT com</span></a>
      p.error_text <a href="/" class="error-link">Take me home ></a>

  pre #{error.stack}
